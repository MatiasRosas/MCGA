@using ASF.Entities
@model IEnumerable<ASF.Entities.Client>

@{
    ViewBag.Title = "Index";
}

@{ var listadoCountry = new List<SelectListItem>();
    foreach (var std in ViewData["Country"] as IList<Country>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Name,
            Value = std.Id.ToString()
        };
        listadoCountry.Add(elemento);
    }
};

