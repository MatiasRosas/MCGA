@using ASF.Entities
@model IEnumerable<ASF.Entities.LocaleStringResource>

@{
    ViewBag.Title = "Index";
}

@{ var listadoLanguages = new List<SelectListItem>();
    foreach (var std in ViewData["Language"] as IList<Language>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Name,
            Value = std.Id.ToString()
        };
        listadoLanguages.Add(elemento);
    }
};

@{ var listadoLocRes = new List<SelectListItem>();
    foreach (var std in ViewData["LocRes"] as IList<LocaleResourceKey>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Name,
            Value = std.Id.ToString()
        };
        listadoLocRes.Add(elemento);
    }
};

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ResourceValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LocaleResourceKey_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language_Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ResourceValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocaleResourceKey_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Language_Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
