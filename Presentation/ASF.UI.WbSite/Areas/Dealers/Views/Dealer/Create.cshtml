@using ASF.Entities
@model ASF.Entities.Dealer

@{
    ViewBag.Title = "Create";
}

@{ var listadoCountry = new List<SelectListItem>();
    foreach (var std in ViewData["Country"] as IList<Country>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Name,
            Value = std.Id.ToString()
        };
        listadoCountry.Add(elemento);
    }
};

@{ var listadoCategory = new List<SelectListItem>();
    foreach (var std in ViewData["Category"] as IList<Category>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Name,
            Value = std.Id.ToString()
        };
        listadoCategory.Add(elemento);
    }
};

<h2>Create</h2>


